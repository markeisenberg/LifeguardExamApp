<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marke.irishwatersafety"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/lea_launcher_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" android:logo="@drawable/lea_launcher_icon">
        <activity
            android:name=".Home"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".CandidateList"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CANDIDATELIST" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".LifeguardManual"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.LIFEGUARDMANUAL" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Disclaimer"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DISCLAIMER" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Stopwatch"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.STOPWATCH" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".TabulatedResults"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.TABULATEDRESULTS" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".JSONParser"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.JSONPARSER" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Login"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AddParticipant"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ADDPARTICIPANT" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".NewParticipantActivity"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ADDPARTICIPANT" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SingleCandidate"
            android:configChanges="orientation|keyboardHidden" 
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SINGLECANDIDATE" />

                <category android:name="android.intent.category.ACTIVITY" />
            </intent-filter>
        </activity>
    </application>

</manifest>
