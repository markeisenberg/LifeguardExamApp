<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/post_border_style"
        android:orientation="vertical" >

            <TableLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Data (row 2) -->

            <TableRow
                android:id="@+id/tableRow2Tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/name"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                
                <TextView
                    android:id="@+id/surname"
                    android:layout_height="match_parent"
                    android:layout_width="60dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/sectionatotal"
                    android:layout_height="match_parent"
                    android:layout_width="22dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/sectionbtotal"
                    android:layout_height="match_parent"
                    android:layout_width="22dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/sectionctotal"
                    android:layout_height="match_parent"
                    android:layout_width="32dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                
                <TextView
                    android:id="@+id/total"
                    android:layout_height="match_parent"
                    android:layout_width="32dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                
                <TextView
                    android:id="@+id/passfail"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                
                <TextView
                    android:id="@+id/exam_confirmed"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                
                <TextView
                    android:id="@+id/ext_confirm"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="12sp"
                    android:textColor="#000000" />
            </TableRow>
            
            <TableRow android:id="@+id/tableRow3Tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                
                <TextView
                    android:id="@+id/title4DOB"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="DOB"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                
                <TextView
                    android:id="@+id/dob"
                    android:layout_height="match_parent"
                    android:layout_width="60dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:textSize="10sp"
                    android:textColor="#000000" />
                
            </TableRow>
    </TableLayout>

            </LinearLayout>

</LinearLayout>