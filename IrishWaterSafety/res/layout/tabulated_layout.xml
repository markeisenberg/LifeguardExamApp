<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >
    
    <LinearLayout android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_layover"
        android:layout_margin="5dp"
		android:background="@drawable/post_background_style"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tableheader"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tableRow1Tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvResultsTitle1"
                    android:layout_width="50dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvResultsTitle2"
                    android:layout_width="60dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="Surname"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvResultsTitle3"
                    android:layout_width="22dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="A"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvResultsTitle4"
                    android:layout_width="22dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="B"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvResultsTitle5"
                    android:layout_width="32dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="C"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvResultsTitle6"
                    android:layout_width="32dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="Total"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tvResultsTitle8"
                    android:layout_width="65dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="Pass/Fail"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/tvResultsTitle9"
                    android:layout_width="35dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="Exam Confirm"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/tvResultsTitle10"
                    android:layout_width="30dp"
                    android:background="@drawable/cell_shape"
                    android:gravity="left"
                    android:padding="2dip"
                    android:text="Ext. Confirm"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/top_layover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tabulated Results"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <Button android:id="@+id/btnSort"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Sort by total"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         android:textColor="#000000"
         android:textSize="15sp">
        </Button>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layover"
        android:layout_below="@+id/toolbar"
        android:background="#fff"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/bottom_layover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:weightSum="2" >


    </LinearLayout>

</RelativeLayout>
